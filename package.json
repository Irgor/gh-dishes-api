  "bugs": {
    "url": "https://github.com/Irgor/gh-dishes-api/issues"
  },
  "homepage": "https://github.com/Irgor/gh-dishes-api#readme",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.6.5",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  }
